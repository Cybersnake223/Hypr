if [[ $(pidof gvfsd ) ]]; then
    pkill gvfsd
    notify-send "Gvfs" "Killed"
fi

if [[ $(pidof aria2c) ]]; then
    pkill aria2c
    notify-send "Aria2" "Server Killed"
fi

if [[ $(pidof wl-copy) ]]; then
	pkill wl-copy
	notify-send "Clipboard Cleaned"
fi

if [[ $(pidof tumblerd) ]]; then
	pkill tumblerd
	notify-send "Thumbnail Daemon Killed"
fi


if [[ $(pidof xfconfd) ]]; then
	pkill xfconfd
fi

trash_size=$(du -hs $HOME/.local/share/Trash/ | awk '{print $1}')
trash-empty --all-users -f
notify-send "Trash" "Cleaned: $trash_size"
yazi_cache=$(du -hs /tmp/yazi/ | awk '{print $1}')
yazi --clear-cache
notify-send "Yazi" "Cache Cleaned: $yazi_cache"
