DIR="$HOME/Pictures/Wallpapers"
TIMEOUT=120

kill_swaybg() {
    pkill -x swaybg && wait
}

kill_swaybg

files=("$DIR"/*.{jpg,png})
RANDOMPIC=${files[RANDOM % ${#files[@]}]}

swaybg -i "$RANDOMPIC" &

sleep "$TIMEOUT"

changewall
