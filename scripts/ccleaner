#!/bin/bash

############################################################################################################
##   ______  __      __  _______   ________  _______    ______   __    __   ______   __    __  ________   ##
##  /      \|  \    /  \|       \ |        \|       \  /      \ |  \  |  \ /      \ |  \  /  \|        \  ##
## |  $$$$$$\\$$\  /  $$| $$$$$$$\| $$$$$$$$| $$$$$$$\|  $$$$$$\| $$\ | $$|  $$$$$$\| $$ /  $$| $$$$$$$$  ##
## | $$   \$$ \$$\/  $$ | $$__/ $$| $$__    | $$__| $$| $$___\$$| $$$\| $$| $$__| $$| $$/  $$ | $$__      ##
## | $$        \$$  $$  | $$    $$| $$  \   | $$    $$ \$$    \ | $$$$\ $$| $$    $$| $$  $$  | $$  \     ##
## | $$   __    \$$$$   | $$$$$$$\| $$$$$   | $$$$$$$\ _\$$$$$$\| $$\$$ $$| $$$$$$$$| $$$$$\  | $$$$$     ##
## | $$__/  \   | $$    | $$__/ $$| $$_____ | $$  | $$|  \__| $$| $$ \$$$$| $$  | $$| $$ \$$\ | $$_____   ##
##  \$$    $$   | $$    | $$    $$| $$     \| $$  | $$ \$$    $$| $$  \$$$| $$  | $$| $$  \$$\| $$     \  ##
##   \$$$$$$     \$$     \$$$$$$$  \$$$$$$$$ \$$   \$$  \$$$$$$  \$$   \$$ \$$   \$$ \$$   \$$ \$$$$$$$$  ##
##                                                                                                        ##
## Cache Cleaner                                                                                          ##
## Created by Cybersnake                                                                                  ##
############################################################################################################

if [[ $(command -v bleachbit) ]]; then

  rm -rf ~/.cache/rofi3.druncache
  rm -rf ~/.cache/nsxiv
  rm -rf ~/.local/state/nvim/
  rm -rf ~/.cache/nvim/
  rm -rf ~/.cache/lvim/
  cache=$(du -hs ~/.cache | awk '{print $1}')
  notify-send "Cache Found: $cache"
  sys=$(bleachbit -c system.cache | rg "Disk space*")
  notify-send "System Cache Cleaned" "$(echo $sys)"

else 

  notify-send "Bleachbit not installed. Please install bleachbit"

fi
