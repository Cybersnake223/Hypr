rm -rf ~/.cache/rofi3.druncache
rm -rf ~/.cache/nsxiv
rm -rf ~/.local/state/nvim/
rm -rf ~/.cache/nvim/
rm -rf ~/.cache/thumbnails/
notify-send "Applications Cache Cleaned"
brave=$(bleachbit -c brave.cache brave.sync | rg "Disk space*")
notify-send "Brave Cache Cleaned" "$(echo $brave)"
sys=$(bleachbit -c system.cache | rg "Disk space*")
notify-send "System Cache Cleaned" "$(echo $sys)"
