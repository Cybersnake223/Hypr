############################################################################################################

status=$(rfkill list bluetooth | rg Soft |  awk '{print $3}' | head -n 1)

## Bluetooth

 if [ $status == no ]; then
 	rfkill block bluetooth
 	notify-send "Bluetooth"  "Disabled"
 fi
 if [ $status == yes ]; then
 	rfkill unblock bluetooth
 	notify-send "Bluetooth" "Enabled"
 fi
