configuration {
  matching: "normal";
  display-drun: "   Apps ";
  display-run: "   Run ";
  display-Network: " 󰀂  Network";
  terminal : "foot";
  display-window: "Windows:";
  drun-display-format: "{name}";
  font: "JetBrainsMono Nerd Font Propo Bold 12";
  modi: "run,drun";
  hide-scrollbar: true;
  show-icons: true;
  icon-theme: "Reversal-purple-dark";
}

@import "colors.rasi"

window {
   background-color: @on-primary;
   width: 30%;
   padding: 10px;
   fullscreen: false;
   border:  3px;
   border-radius: 15px;
   border-color: @on-primary;
}

mainbox {
   background-color: @on-primary;
   spacing:5px;
   border-radius: 20px;
}

message {
   padding: 10px 10px;
   background-color: @on-primary;
   border-radius: 20px;
}

textbox {
   text-color: @tertiary-container;
   background-color: @on-primary;
   border-radius: 20px;
}

listview {
   fixed-height: true;
   dynamic: false;
   scrollbar: false;
   spacing: 0px;
   padding: 5px 0px 0px 0px;
   margin: 1px 1px 1px 1px;
   background-color: @on-primary;
   border-radius: 20px;
}

element {
   padding: 4px 10px;
   border-radius: 20px;
}

element normal.normal {
   padding: 0px 15px;
   background-color: @on-primary;
   text-color: @tertiary-container;
   border-radius: 20px;
}

element normal.urgent {
   background-color: @on-primary;
   text-color: @tertiary-container;
}

element normal.active {
   background-color: @on-primary;
   text-color: @tertiary-container;
   border-radius: 20px;
}

element selected.normal {
    background-color: @tertiary-container;
    text-color:       @shadow;
    border-radius: 20px;
}

element selected.urgent {
    background-color: @on-primary;
    text-color:       @error-container;
    border-radius: 20px;
}

element selected.active {
    background-color: @on-primary;
    text-color:       @shadow;
    border-radius: 20px;
}

element alternate.normal {
    background-color: @on-primary;
    text-color:       @tertiary-container;
    border-radius: 20px;
}

element alternate.urgent {
    background-color: @on-primary;
    text-color:       @error-container;
    border-radius: 20px;
}

element alternate.active {
    background-color: @on-primary;
    text-color:       @shadow;
    border-radius: 20px;
}

scrollbar {
   background-color: @on-primary;
   handle-color: #1e1e2e;
   handle-width: 0px;
   border-radius: 20px;
}

mode-switcher {
   background-color: @on-primary;
   border-radius: 20px;
}

button {
   background-color: @on-primary;
   text-color:       @error-container;
   border-radius: 20px;
}

button selected {
    text-color: @on-primary;
    border-radius: 20px;
}

inputbar {
   background-color: @on-primary;
   spacing: 0px;
   children:   [ prompt,textbox-prompt-colon,entry,case-indicator ];
   border-radius: 20px;
}

prompt {
   padding:0px 10px;
   background-color: @on-primary;
   text-color: @tertiary-container;
   border-radius: 20px;
}

entry {
   padding:0px 6px;
   background-color: @on-primary;
   text-color: @tertiary-container;
   border-radius: 20px;
}

case-indicator {
   padding:6px 10px;
   text-color: #1e1e2e;
   background-color: @on-primary;
   border-radius: 20px;
}

textbox-prompt-colon {
	padding:0px 0px;
    expand:     false;
    str:        "";
    margin:     0px 0.3em 0em 0em ;
    text-color: @tertiary-container;
    background-color: @on-primary;
    border-radius: 20px;
}
