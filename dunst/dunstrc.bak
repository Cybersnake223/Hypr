[global]
monitor = 0
follow = mouse
#width = 280
#height = 80
#origin = top-right
#offset = 10x48
indicate_hidden = yes
shrink = yes
separator_color = auto
separator_height = 2
line_height = 2
padding = 5
horizontal_padding = 5
frame_width = 5
sort = no
idle_threshold = 120
font = JetBrains Mono 10
markup = full
format = "<b>%s</b>\n%b"
alignment = left
show_age_threshold = 60
word_wrap = yes
ignore_newline = yes
stack_duplicates = true
hide_duplicate_count = no
show_indicators = no
icon_position = left
max_icon_size = 40
#sticky_history = yes
#history_length = 20
#browser = x-www-browser -new-tab
#always_run_script = true
corner_radius = 15
title = Dunst
class = Dunst

[urgency_low]
timeout = 2
background = "#0a0e14"
foreground = "#b3b1ab"
frame_color = "#1f2430"

[urgency_normal]
timeout = 5
background = "#0a0e14"
foreground = "#b3b1ab"
frame_color = "#1f2430"

[urgency_critical]
timeout = 0
background = "#0a0e14"
foreground = "#b3b1ab"
frame_color = "#ff3333"
